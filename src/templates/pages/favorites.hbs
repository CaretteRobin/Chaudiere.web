<div class="max-w-4xl m-auto">
    <h1 class="text-3xl font-bold text-purple-700 mb-8 text-center">Mes événements favoris</h1>

    {{#if hasFavorites}}
        <div class="favorites-container">
            {{{favoritesContent}}}
        </div>
    {{else}}
        <div class="text-center p-8 bg-gray-50 rounded-lg">
            <p class="text-gray-600 mb-4">Vous n'avez pas encore d'événements favoris.</p>
            <a href="/evenements" class="inline-block bg-purple-100 hover:bg-purple-200 text-purple-800 font-medium py-2 px-6 rounded-lg text-center shadow transition" data-link>
                Parcourir les événements
            </a>
        </div>
    {{/if}}
</div>