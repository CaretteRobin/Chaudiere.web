<div class="max-w-4xl m-auto">
    <h1 class="text-4xl font-bold mb-6 text-center text-purple-800">{{title}}</h1>
    <p class="text-gray-700 mb-6">{{description}}</p>
    <div class="mb-4">
        <span class="font-semibold">Catégorie :</span>
        <a href="/categories/{{category.id}}" class="text-purple-600 hover:underline" data-link>
            {{category.name}}
        </a>
    </div>
    <div class="mb-4">
        <span class="font-semibold">Prix :</span>
        <span>{{price}} €</span>
    </div>
    <div class="mb-4">
        <span class="font-semibold">Date de début :</span>
        <span>{{start_date}}</span>
    </div>
    <div class="mb-4">
        <span class="font-semibold">Date de fin :</span>
        <span>{{end_date}}</span>
    </div>
    {{#if time}}
        <div class="mb-4">
            <span class="font-semibold">Heure :</span>
            <span>{{time}}</span>
        </div>
    {{/if}}
    <div class="mb-4">
        <span class="font-semibold">Organisé par :</span>
        <span>{{author.email}}</span>
    </div>
    <div class="text-sm text-gray-700 mt-6">
        <span>Créé le : {{created_at}}</span>
    </div>
</div>