<div class="max-w-2xl mx-auto bg-white rounded-xl p-8 shadow-lg">
    <h1 class="text-3xl font-bold mb-4">{{title}}</h1>
    <p class="text-gray-700 mb-6">{{description}}</p>
    <div class="mb-4">
        <span class="font-semibold">Prix :</span>
        <span>{{price}} €</span>
    </div>
    <div class="mb-4">
        <span class="font-semibold">Date de début :</span>
        <span>{{start_date}}</span>
    </div>
    <div class="mb-4">
        <span class="font-semibold">Date de fin :</span>
        <span>{{end_date}}</span>
    </div>
    {{#if time}}
    <div class="mb-4">
        <span class="font-semibold">Heure :</span>
        <span>{{time}}</span>
    </div>
    {{/if}}
    <div class="text-sm text-gray-500 mt-6">
        <span>Créé le : {{created_at}}</span>
    </div>
</div>