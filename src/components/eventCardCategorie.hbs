<div class="flex flex-col items-end m-4 border border-gray-200 bg-white rounded-xl p-6 shadow-md">
  <div class="flex flex-col gap-4 w-full mb-6">
    <!-- Titre -->
    <h2 class="text-lg font-semibold text-purple-800">{{title}}</h2>

    <!-- Date -->
    <div class="flex text-sm text-gray-700">
      <span class="font-medium w-24">Date :</span>
      <span>{{start_date}}</span>
    </div>

    <!-- Catégorie -->
    <div class="flex text-sm text-gray-700">
      <span class="font-medium w-24">Catégorie :</span>
      <span>{{category.name}}</span>
    </div>
  </div>

  <!-- Bouton voir plus -->
  <a
    href="/evenements/{{id}}"
    class="bg-purple-100 hover:bg-purple-200 text-purple-800 font-medium py-2 px-4 rounded-lg text-center shadow transition h-[min-content]"
    data-link
  >
    Voir plus
  </a>
</div>
